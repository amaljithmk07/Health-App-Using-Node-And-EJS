<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/view.css">
</head>

<body>
    <div class="body">
        <div class="navbar">
            <div class="logo">LifeSnap</div>
            <div class="nav">
                <div class="nav-item">
                    <ul>
                        <li>
                            <a href="/home">Home</a>
                        </li>
                        <li>
                            <a href="/add"> Add Patient</a>

                        </li>
                        <li>
                            <a href="/api/health/view">View Patient </a>
                        </li>
                        <li>
                            <a href="">About Us</a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="image"> </div>

        <div class="table">
            <h1> PATIENT DETAILS</h1>
            <table>

                <tr>

                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th></th>

                </tr>

                <% details.forEach((list)=>{ %>

                    <tr>

                        <td>
                            <%= list.first_name %>
                        </td>
                        <td>
                            <%= list.last_name %>
                        </td>
                        <td>
                            <%= list.gender %>
                        </td>
                        <td>
                            <%= list.date_of_birth %>
                        </td>

                        <td><a href="/api/health/view/<%= list._id %>"><input type="button" value="View"></a>
                            <a href="/api/health/delete/<%= list._id %>"><input type="button" value="Delete"></a>
                        </td>
                    </tr>

                    <% }) %>

            </table>
        </div>


    </div>
</body>

</html>